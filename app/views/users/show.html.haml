%h1
  = @user.fullname
  %small= link_to "modifier mes informations", edit_user_path(@user) if can? :update, @user

.row
  .span4
    - if @user.avatar.present?
      = image_tag @user.avatar_url.to_s
    - else
      = image_tag "http://placehold.it/200&text=photo 200x200"

  .span12
    %p
      Adresse :
      = @user.fulladdress
    %p 
      Téléphone :
      = @user.phone
    %p
      Portable:
      = @user.mobile
    %p
      Email:
      = @user.email
    %p
      Date de naissance:
      = l(@user.birthday) if @user.birthday.present?



%h2 Saisons

= render @user.seasons

